<h2>‚úçÔ∏è Hindi Likho ‚Äì üîä Awaaz Suno</h2>

<textarea id="text" placeholder="Yahan Hindi mein likho..."></textarea>

<button onclick="bolna()">üîä Sunao</button>

<script>
function bolna() {
  let text = document.getElementById("text").value;
  if(text === "") {
    alert("Kuchh likho pehle");
    return;
  }

  let speech = new SpeechSynthesisUtterance(text);
  speech.lang = "hi-IN";
  speech.rate = 0.9;
  speech.pitch = 1;

  let voices = speechSynthesis.getVoices();
  for(let i = 0; i < voices.length; i++) {
    if(voices[i].lang === "hi-IN") {
      speech.voice = voices[i];
      break;
    }
  }

  window.speechSynthesis.speak(speech);
}
</script>

